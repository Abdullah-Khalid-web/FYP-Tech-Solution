                            suggestedDeduction = Math.min(loan.installment, loan.due_amount);
                            maxDeduction = loan.installment;
                        } else {
                            // No installment - suggest reasonable amount
                            maxDeduction = Math.min(loan.due_amount, baseSalary * 0.5);
                            suggestedDeduction = Math.min(loan.due_amount, maxDeduction);
