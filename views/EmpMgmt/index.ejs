                if (data.success && data.loans.length > 0) {
                    let html = '';
                    data.loans.forEach(loan => {
                        // For loans with installments, use installment amount
                        // For loans without installments, suggest 50% of salary as max
                        let suggestedDeduction = 0;
                        let maxDeduction = 0;
                        
                        if (loan.installment && loan.installment > 0) {
                            // Loan has installment - use that amount
                            suggestedDeduction = Math.min(loan.installment, loan.due_amount);
                            maxDeduction = loan.installment;
                        } else {
                            // No installment - suggest reasonable amount
                            maxDeduction = Math.min(loan.due_amount, baseSalary * 0.5);
                            suggestedDeduction = Math.min(loan.due_amount, maxDeduction);
                        }
                        
                        html += `
                            <div class="loan-item">
                                <div class="form-check">
                                    <input class="form-check-input loan-checkbox" type="checkbox" 
                                           data-loan-id="${loan.id}" 
                                           data-has-installment="${loan.installment ? 'true' : 'false'}"
                                           ${loan.installment ? 'checked' : 'checked'} 
                                           ${loan.installment ? 'onclick="return false;"' : ''}>
                                    <label class="form-check-label w-100">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
