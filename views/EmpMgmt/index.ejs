                html += `<tr><td colspan="6" class="text-center text-muted">No loan records</td></tr>`;
            }

            html += `</tbody></table></div></div>`;

            // Salary Adjustments Tab
            html += `
                <div class="tab-pane fade" id="adjustments" role="tabpanel">
                    <div class="timeline">
            `;

            if (salaryHistory && salaryHistory.length > 0) {
                salaryHistory.forEach(adjustment => {
                    const increase = adjustment.new_salary > adjustment.old_salary;
                    html += `
                        <div class="timeline-item">
                            <h6 class="mb-1">${increase ? 'Salary Increase' : 'Salary Adjustment'}</h6>
                            <p class="mb-1">
                                <span class="text-muted">From:</span> PKR ${adjustment.old_salary.toLocaleString()} 
                                <span class="text-muted">To:</span> PKR ${adjustment.new_salary.toLocaleString()}
                                <span class="badge ${increase ? 'bg-success' : 'bg-warning'} ms-2">
