    <script>
        // Initialize when DOM is loaded
        document.addEventListener('DOMContentLoaded', function () {
            initializeEventListeners();
            initializeViewToggle();
        });

        function initializeEventListeners() {
            // Save buttons
            document.getElementById('saveEmployeeBtn')?.addEventListener('click', saveEmployee);
            document.getElementById('updateEmployeeBtn')?.addEventListener('click', updateEmployee);
            document.getElementById('saveSalaryBtn')?.addEventListener('click', saveSalary);
            document.getElementById('saveLoanBtn')?.addEventListener('click', saveLoan);
            document.getElementById('saveQuickLoanBtn')?.addEventListener('click', saveQuickLoan);
            document.getElementById('saveSalaryAdjustmentBtn')?.addEventListener('click', saveSalaryAdjustment);

            // Quick actions
            document.getElementById('payAllSalaries')?.addEventListener('click', payAllSalaries);
            document.getElementById('quickLoanBtn')?.addEventListener('click', showQuickLoanModal);
            document.getElementById('exportDataBtn')?.addEventListener('click', exportData);
            document.getElementById('generateReportBtn')?.addEventListener('click', generateReport);
            document.getElementById('adjustSalaryBtn')?.addEventListener('click', showSalaryAdjustmentModal);

            // Filters
            document.getElementById('applyFilters')?.addEventListener('click', applyFilters);
            document.getElementById('resetFilters')?.addEventListener('click', resetFilters);
            document.getElementById('advancedFiltersBtn')?.addEventListener('click', showAdvancedFilters);

            // Loan repayment type change
            document.getElementById('loanRepaymentType')?.addEventListener('change', function() {
                const installmentSection = document.getElementById('installmentSection');
                installmentSection.style.display = this.value === 'installments' ? 'block' : 'none';
                calculateInstallment();
            });

            // Calculate installment when amount or installments change
            document.getElementById('loanAmount')?.addEventListener('input', calculateInstallment);
            document.getElementById('loanInstallments')?.addEventListener('input', calculateInstallment);

            // Recalculate totals
            document.getElementById('salaryBonus')?.addEventListener('input', calculateTotalPayable);
            document.getElementById('salaryFine')?.addEventListener('input', calculateTotalPayable);

            // Event delegation for dynamic buttons
            document.addEventListener('click', function (e) {
                if (e.target.closest('.view-employee')) {
                    const empId = e.target.closest('.view-employee').getAttribute('data-emp-id');
                    viewEmployeeDetails(empId);
                }
                if (e.target.closest('.edit-employee')) {
                    const empId = e.target.closest('.edit-employee').getAttribute('data-emp-id');
                    editEmployee(empId);
                }
                if (e.target.closest('.manage-salary')) {
                    const empId = e.target.closest('.manage-salary').getAttribute('data-emp-id');
                    manageSalary(empId);
                }
                if (e.target.closest('.manage-loan')) {
                    const empId = e.target.closest('.manage-loan').getAttribute('data-emp-id');
                    manageLoan(empId);
                }
                if (e.target.closest('.loan-payment')) {
                    const empId = e.target.closest('.loan-payment').getAttribute('data-emp-id');
                    quickLoanPayment(empId);
                }
                if (e.target.closest('.delete-employee')) {
                    const empId = e.target.closest('.delete-employee').getAttribute('data-emp-id');
                    deleteEmployee(empId);
                }
                if (e.target.closest('.activate-employee')) {
                    const empId = e.target.closest('.activate-employee').getAttribute('data-emp-id');
                    toggleEmployeeStatus(empId, 'active');
                }
                if (e.target.closest('.deactivate-employee')) {
                    const empId = e.target.closest('.deactivate-employee').getAttribute('data-emp-id');
                    toggleEmployeeStatus(empId, 'inactive');
                }
                if (e.target.closest('.quick-pay-btn')) {
                    const empId = e.target.closest('.quick-pay-btn').getAttribute('data-emp-id');
                    const salary = e.target.closest('.quick-pay-btn').getAttribute('data-salary');
                    quickPaySalary(empId, salary);
                }
            });
        }

        function initializeViewToggle() {
