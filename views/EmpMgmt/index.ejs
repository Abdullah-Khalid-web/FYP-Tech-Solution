                if (data.success && data.loans && data.loans.length > 0) {
                    let html = '<div class="list-group">';
                    data.loans.forEach(loan => {
                        html += `
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="mb-1">${loan.reason}</h6>
                                <p class="mb-1">Amount: ${loan.amount.toLocaleString()} | Due: ${loan.due_amount.toLocaleString()}</p>
                                <small class="text-muted">Taken: ${new Date(loan.taken_on).toLocaleDateString()}</small>
                                ${loan.installment ? `<br><small class="text-primary">Installment: ${loan.installment.toLocaleString()}/month</small>` : ''}
                            </div>
                            <div>
                                <span class="badge ${loan.status === 'active' ? 'bg-warning' : 'bg-success'}">${loan.status}</span>
                            </div>
                        </div>
                    </div>
                `;
                    });
                    html += '</div>';
                    loansList.innerHTML = html;
                } else {
                    loansList.innerHTML = '<div class="text-center text-muted py-3">No loans found</div>';
                }
            } catch (error) {
                console.error('Error loading existing loans:', error);
                loansList.innerHTML = '<div class="text-center text-danger py-3">Error loading loans</div>';
            }
        }

        function calculateTotalPayable() {
            const baseSalaryInput = document.getElementById('salaryBaseAmount');
            const bonusInput = document.getElementById('salaryBonus');
            const fineInput = document.getElementById('salaryFine');
            const totalPayableElement = document.getElementById('totalPayableAmount');

            if (!baseSalaryInput || !bonusInput || !fineInput || !totalPayableElement) {
                return;
            }

            const baseSalary = parseFloat(baseSalaryInput.value) || 0;
            const bonus = parseFloat(bonusInput.value) || 0;
            const fine = parseFloat(fineInput.value) || 0;

            let totalDeductions = 0;

            document.querySelectorAll('.loan-checkbox:checked').forEach(checkbox => {
                const loanId = checkbox.getAttribute('data-loan-id');
                const amountInput = document.querySelector(`.loan-deduction-amount[data-loan-id="${loanId}"]`);
                if (amountInput) {
                    totalDeductions += parseFloat(amountInput.value) || 0;
                }
            });

            const totalPayable = baseSalary + bonus - fine - totalDeductions;
            totalPayableElement.textContent = totalPayable > 0 ? totalPayable.toLocaleString() : '0';
        }

        // Add event listeners for loan modal functionality
        document.addEventListener('DOMContentLoaded', function () {
            // Loan repayment type change
            const loanRepaymentType = document.getElementById('loanRepaymentType');
            if (loanRepaymentType) {
                loanRepaymentType.addEventListener('change', function () {
                    const installmentSection = document.getElementById('installmentSection');
                    if (installmentSection) {
                        installmentSection.style.display = this.value === 'installments' ? 'block' : 'none';
                        calculateInstallment();
                    }
                });
            }

            // Calculate installment when amount or installments change
            const loanAmount = document.getElementById('loanAmount');
            const loanInstallments = document.getElementById('loanInstallments');

            if (loanAmount) loanAmount.addEventListener('input', calculateInstallment);
            if (loanInstallments) loanInstallments.addEventListener('input', calculateInstallment);

            // Recalculate totals for salary
            const salaryBonus = document.getElementById('salaryBonus');
            const salaryFine = document.getElementById('salaryFine');

            if (salaryBonus) salaryBonus.addEventListener('input', calculateTotalPayable);
            if (salaryFine) salaryFine.addEventListener('input', calculateTotalPayable);

            // Save buttons
            const saveSalaryBtn = document.getElementById('saveSalaryBtn');
            const saveLoanBtn = document.getElementById('saveLoanBtn');

            if (saveSalaryBtn) saveSalaryBtn.addEventListener('click', saveSalary);
            if (saveLoanBtn) saveLoanBtn.addEventListener('click', saveLoan);
        });

        function calculateInstallment() {
            const loanAmount = document.getElementById('loanAmount');
            const loanInstallments = document.getElementById('loanInstallments');
            const loanInstallmentAmount = document.getElementById('loanInstallmentAmount');

            if (!loanAmount || !loanInstallments || !loanInstallmentAmount) return;

            const amount = parseFloat(loanAmount.value) || 0;
            const installments = parseInt(loanInstallments.value) || 3;

            if (amount > 0 && installments > 0) {
                const installmentAmount = Math.ceil(amount / installments);
                loanInstallmentAmount.value = installmentAmount;
            }
        }

        // Save salary function
        async function saveSalary() {
            const form = document.getElementById('salaryForm');
            if (!form) {
                showNotification('Salary form not found', 'error');
                return;
            }

            const formData = new FormData(form);

            const salaryData = {
                user_id: parseInt(formData.get('user_id')),
                month: formData.get('month'),
                amount: parseFloat(document.getElementById('salaryBaseAmount').value),
                bonus: parseFloat(document.getElementById('salaryBonus').value) || 0,
                fine: parseFloat(document.getElementById('salaryFine').value) || 0,
                paid_on: formData.get('paid_on'),
                notes: formData.get('notes'),
                loan_deductions: []
            };

            document.querySelectorAll('.loan-checkbox:checked').forEach(checkbox => {
                const loanId = checkbox.getAttribute('data-loan-id');
                const amountInput = document.querySelector(`.loan-deduction-amount[data-loan-id="${loanId}"]`);
                if (amountInput) {
                    salaryData.loan_deductions.push({
                        loan_id: parseInt(loanId),
                        amount: parseFloat(amountInput.value) || 0
                    });
                }
            });

            try {
                const response = await fetch(`/EmpMgmt/api/EmpMgmt/${salaryData.user_id}/salary/simple`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(salaryData)
                });

                const data = await response.json();

                if (data.success) {
                    let message = 'Salary paid successfully!';
                    if (data.totalDeductions > 0) {
                        message += ` ${data.totalDeductions.toLocaleString()} deducted for loans.`;
                        if (data.processedLoans && data.processedLoans.length > 0) {
                            message += ` Loans updated: ${data.processedLoans.length}`;
                        }
                    }

                    bootstrap.Modal.getInstance(document.getElementById('salaryModal')).hide();
                    showNotification(message, 'success');
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showNotification('Error: ' + (data.message || 'Unknown error'), 'error');
                }
            } catch (error) {
                console.error('Error saving salary:', error);
                showNotification('Error saving salary', 'error');
            }
        }

        // Save loan function
        async function saveLoan() {
            const form = document.getElementById('loanForm');
            if (!form) {
                showNotification('Loan form not found', 'error');
                return;
            }

            const formData = new FormData(form);

            const loanData = {
                user_id: parseInt(formData.get('user_id')),
                amount: parseFloat(formData.get('amount')),
                repayment_type: formData.get('repayment_type'),
                installments: formData.get('installments') ? parseInt(formData.get('installments')) : null,
                installment_amount: formData.get('installment_amount') ? parseFloat(formData.get('installment_amount')) : null,
                reason: formData.get('reason'),
                taken_on: formData.get('taken_on')
            };

            try {
                const response = await fetch(`/EmpMgmt/api/EmpMgmt/${loanData.user_id}/loan/simple`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(loanData)
                });

                const data = await response.json();

                if (data.success) {
                    let message = 'Loan added successfully!';
                    if (data.installmentAmount) {
                        message += ` Monthly installment: ${data.installmentAmount.toLocaleString()}`;
                    }

                    bootstrap.Modal.getInstance(document.getElementById('loanModal')).hide();
                    showNotification(message, 'success');
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showNotification('Error: ' + (data.message || 'Unknown error'), 'error');
                }
            } catch (error) {
                console.error('Error saving loan:', error);
                showNotification('Error saving loan', 'error');
            }
        }
        function applyFilters() {
            const roleFilter = document.getElementById('roleFilter').value;
            const statusFilter = document.getElementById('statusFilter').value;
            const searchFilter = document.getElementById('searchFilter').value;
            const salaryFilter = document.getElementById('salaryFilter').value;

            const params = new URLSearchParams();
            params.append('page', '1');

            if (roleFilter && roleFilter !== 'all') params.append('role', roleFilter);
            if (statusFilter && statusFilter !== 'all') params.append('status', statusFilter);
            if (searchFilter) params.append('search', searchFilter);
            if (salaryFilter && salaryFilter !== 'all') params.append('salaryRange', salaryFilter);

            window.location.href = `/EmpMgmt?${params.toString()}`;
        }

        function resetFilters() {
            window.location.href = '/EmpMgmt?page=1';
        }

        function exportData() {
            alert('Export feature coming soon!');
        }

        function showNotification(message, type = 'info') {
            // Create notification element
            const notification = document.createElement('div');
            notification.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
            notification.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            notification.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;

            // Add to page
            document.body.appendChild(notification);

            // Auto remove after 5 seconds
            setTimeout(() => {
                if (notification.parentNode) {
                    notification.parentNode.removeChild(notification);
                }
            }, 5000);
        }
    </script>
