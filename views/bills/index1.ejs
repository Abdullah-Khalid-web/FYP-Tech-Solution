                                        <th width="25%">Product</th>
                                        <th width="10%">Price</th>
                                        <th width="10%">Qty</th>
                                        <th width="10%">Discount</th>
                                        <th width="10%">Tax</th>
                                        <th width="10%">Total</th>
                                        <th width="5%">Action</th>
                                    </tr>
