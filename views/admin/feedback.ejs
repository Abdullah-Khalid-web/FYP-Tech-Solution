<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #007bff;
            --secondary-color: #6c757d;
        }
        
        body {
            background-color: #f8fafc;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .dashboard-header {
            background-color: white;
            border-bottom: 1px solid #e5e7eb;
            padding: 1.5rem 0;
            margin-bottom: 1.5rem;
        }
        
        .card {
            background: white;
            border-radius: 0.5rem;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
            border: 1px solid #e5e7eb;
            margin-bottom: 1.5rem;
        }
        
        .card-header {
            background: #f8fafc;
            padding: 1rem 1.5rem;
            border-bottom: 1px solid #e5e7eb;
            border-radius: 0.5rem 0.5rem 0 0;
        }
        
        .feedback-item {
            border-bottom: 1px solid #e5e7eb;
            padding: 1.5rem;
            transition: background-color 0.2s;
        }
        
        .feedback-item:hover {
            background-color: #f8fafc;
        }
        
        .feedback-item:last-child {
            border-bottom: none;
        }
        
        .rating-stars {
            color: #fbbf24;
        }
        
        .status-badge-new { background-color: #3b82f6; color: white; }
        .status-badge-read { background-color: #6b7280; color: white; }
        .status-badge-replied { background-color: #10b981; color: white; }
        .status-badge-resolved { background-color: #8b5cf6; color: white; }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="dashboard-header">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="h3 mb-2">
                        <i class="fas fa-comments me-2"></i><%= title %>
                    </h1>
                    <p class="mb-0 text-muted">Manage customer feedback and inquiries</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="/admin/dashboard" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-arrow-left me-1"></i>Dashboard
                    </a>
                    <a href="/admin/shops" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-store me-1"></i>Shops
                    </a>
                    <a href="/admin/users" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-users me-1"></i>Users
                    </a>
                    <a href="/admin/logout" class="btn btn-outline-danger btn-sm">
                        <i class="fas fa-sign-out-alt me-1"></i>Logout
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <!-- Filters -->
        <div class="card">
            <div class="card-body">
                <div class="status-filter">
                    <label class="form-label me-2">Filter by Status:</label>
                    <div class="btn-group" role="group">
                        <a href="/admin/feedback" class="btn <%= currentStatus === 'all' ? 'btn-primary' : 'btn-outline-primary' %>">All</a>
                        <a href="/admin/feedback?status=new" class="btn <%= currentStatus === 'new' ? 'btn-primary' : 'btn-outline-primary' %>">New</a>
                        <a href="/admin/feedback?status=read" class="btn <%= currentStatus === 'read' ? 'btn-primary' : 'btn-outline-primary' %>">Read</a>
                        <a href="/admin/feedback?status=replied" class="btn <%= currentStatus === 'replied' ? 'btn-primary' : 'btn-outline-primary' %>">Replied</a>
                        <a href="/admin/feedback?status=resolved" class="btn <%= currentStatus === 'resolved' ? 'btn-primary' : 'btn-outline-primary' %>">Resolved</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Feedback List -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-list me-2"></i>
                    Feedback (<%= feedback.length %> found)
                </h5>
            </div>
            <div class="card-body p-0">
                <% feedback.forEach(item => { %>
                <div class="feedback-item">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h6 class="mb-0 fw-semibold"><%= item.subject %></h6>
                                <span class="badge status-badge-<%= item.status %>">
                                    <%= item.status.charAt(0).toUpperCase() + item.status.slice(1) %>
                                </span>
                            </div>
                            
                            <p class="text-muted mb-2"><%= item.message %></p>
                            
                            <div class="d-flex align-items-center text-muted small">
                                <div class="me-3">
                                    <i class="fas fa-store me-1"></i>
                                    <strong><%= item.shop_name %></strong>
                                </div>
                                <div class="me-3">
                                    <i class="fas fa-envelope me-1"></i>
                                    <%= item.shop_email %>
                                </div>
                                <% if (item.rating) { %>
                                <div class="me-3">
                                    <span class="rating-stars">
                                        <% for (let i = 1; i <= 5; i++) { %>
                                        <i class="fas fa-star<%= i > item.rating ? '-half-alt' : '' %>"></i>
                                        <% } %>
                                    </span>
                                    (<%= item.rating %>/5)
                                </div>
                                <% } %>
                                <div>
                                    <i class="fas fa-clock me-1"></i>
                                    <%= new Date(item.created_at).toLocaleString() %>
                                </div>
                            </div>
                            
                            <% if (item.admin_notes) { %>
                            <div class="mt-2 p-2 bg-light rounded">
                                <small class="text-muted">
                                    <strong>Admin Notes:</strong> <%= item.admin_notes %>
                                </small>
                            </div>
                            <% } %>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="btn-group-vertical w-100">
                                <% if (item.status === 'new') { %>
                                <button class="btn btn-outline-primary btn-sm mb-1" onclick="updateFeedbackStatus('<%= item.id %>', 'read')">
                                    <i class="fas fa-eye me-1"></i>Mark as Read
                                </button>
                                <% } %>
                                
                                <% if (item.status === 'read') { %>
                                <button class="btn btn-outline-success btn-sm mb-1" onclick="updateFeedbackStatus('<%= item.id %>', 'replied')">
                                    <i class="fas fa-reply me-1"></i>Mark as Replied
                                </button>
                                <% } %>
                                
                                <% if (item.status !== 'resolved') { %>
                                <button class="btn btn-outline-info btn-sm mb-1" onclick="updateFeedbackStatus('<%= item.id %>', 'resolved')">
                                    <i class="fas fa-check me-1"></i>Mark as Resolved
                                </button>
                                <% } %>
                                
                                <button class="btn btn-outline-warning btn-sm" onclick="addAdminNotes('<%= item.id %>', '<%= item.subject %>')">
                                    <i class="fas fa-edit me-1"></i>Add Notes
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
                
                <% if (feedback.length === 0) { %>
                <div class="text-center py-5">
                    <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                    <h5>No Feedback Found</h5>
                    <p class="text-muted">
                        <% if (currentStatus !== 'all') { %>
                        No feedback with status "<%= currentStatus %>" found
                        <% } else { %>
                        No feedback has been submitted yet
                        <% } %>
                    </p>
                </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Add Admin Notes Modal -->
    <div class="modal fade" id="adminNotesModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Admin Notes</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="adminNotesForm">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Feedback Subject</label>
                            <input type="text" class="form-control" id="feedbackSubject" readonly>
                        </div>
                        <div class="mb-3">
                            <label for="adminNotes" class="form-label">Admin Notes</label>
                            <textarea class="form-control" id="adminNotes" name="notes" rows="4" placeholder="Add your notes here..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save Notes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let currentFeedbackId = null;
        
        async function updateFeedbackStatus(feedbackId, status) {
            const statusText = status.charAt(0).toUpperCase() + status.slice(1);
            
            try {
                const response = await fetch(`/admin/api/feedback/${feedbackId}/status`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ status })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    alert(`Feedback marked as ${statusText}!`);
                    location.reload();
                } else {
                    throw new Error(data.message);
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }
        
        function addAdminNotes(feedbackId, subject) {
            currentFeedbackId = feedbackId;
            document.getElementById('feedbackSubject').value = subject;
            document.getElementById('adminNotes').value = '';
            new bootstrap.Modal(document.getElementById('adminNotesModal')).show();
        }
        
        document.getElementById('adminNotesForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const notes = document.getElementById('adminNotes').value;
            
            if (!notes.trim()) {
                alert('Please enter some notes');
                return;
            }
            
            try {
                // For now, we'll just show an alert since we don't have an API endpoint for notes
                alert('Notes functionality would be implemented here. Notes: ' + notes);
                bootstrap.Modal.getInstance(document.getElementById('adminNotesModal')).hide();
                
                // In a real implementation, you would call an API endpoint:
                /*
                const response = await fetch(`/admin/api/feedback/${currentFeedbackId}/notes`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ notes })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    alert('Notes saved successfully!');
                    bootstrap.Modal.getInstance(document.getElementById('adminNotesModal')).hide();
                    location.reload();
                } else {
                    throw new Error(data.message);
                }
                */
                
            } catch (error) {
                alert('Error: ' + error.message);
            }
        });
    </script>
</body>
</html>