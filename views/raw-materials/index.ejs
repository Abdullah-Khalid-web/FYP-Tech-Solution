        container.innerHTML = '';

        if (pagination.totalPages <= 1) return;

        // Previous button
        const prevLi = document.createElement('li');
        prevLi.className = `page-item ${pagination.page === 1 ? 'disabled' : ''}`;
        prevLi.innerHTML = `<a class="page-link" href="#" onclick="changePageFunction(${pagination.page - 1}); return false;">Previous</a>`;
        container.appendChild(prevLi);

        // Page numbers
        for (let i = 1; i <= pagination.totalPages; i++) {
            const pageLi = document.createElement('li');
            pageLi.className = `page-item ${pagination.page === i ? 'active' : ''}`;
            pageLi.innerHTML = `<a class="page-link" href="#" onclick="changePageFunction(${i}); return false;">${i}</a>`;
            container.appendChild(pageLi);
        }

        // Next button
        const nextLi = document.createElement('li');
        nextLi.className = `page-item ${pagination.page === pagination.totalPages ? 'disabled' : ''}`;
        nextLi.innerHTML = `<a class="page-link" href="#" onclick="changePageFunction(${pagination.page + 1}); return false;">Next</a>`;
        container.appendChild(nextLi);
    }

