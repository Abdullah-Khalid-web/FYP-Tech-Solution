    async function loadStockLedger(materialId, page = 1) {
        try {
            const data = await apiCall(`/materials/${materialId}/ledger?page=${page}&limit=10`);
            renderStockLedger(data.data, data.pagination);
        } catch (error) {
            console.error('Error loading stock ledger:', error);
            throw error;
        }
    }

    function renderStockLedger(data, pagination) {
        const modalTitle = document.getElementById('stockLedgerModalLabel');
        const ledgerTableBody = document.getElementById('ledgerTableBody');
        const materialSummary = document.getElementById('materialSummary');
        const ledgerCountText = document.getElementById('ledgerCountText');
        
        if (!modalTitle || !ledgerTableBody || !materialSummary) {
            console.error('Required elements not found');
            return;
        }
        
        try {
            // Set modal title
            modalTitle.innerHTML = `<i class="fas fa-history me-2"></i>Stock Ledger - ${data.material.name}`;
            
            // Render summary
            const summary = data.summary || {};
            materialSummary.innerHTML = `
                <div class="row">
                    <div class="col-md-3">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h5 class="card-title text-primary">Current Stock</h5>
                                <h3 class="mb-0">${summary.current_stock || 0}</h3>
                                <small class="text-muted">${data.material.unit_of_measure || 'units'}</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h5 class="card-title text-success">Total In</h5>
                                <h3 class="mb-0">${summary.total_in || 0}</h3>
                                <small class="text-muted">Units</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h5 class="card-title text-danger">Total Out</h5>
                                <h3 class="mb-0">${summary.total_out || 0}</h3>
                                <small class="text-muted">Units</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h5 class="card-title text-info">Avg Cost</h5>
                                <h3 class="mb-0">${getCurrencySymbol()}${parseFloat(summary.cost_price || 0).toFixed(2)}</h3>
                                <small class="text-muted">Per unit</small>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            // Render ledger table
            ledgerTableBody.innerHTML = '';
            
            if (data.ledger && data.ledger.length > 0) {
                data.ledger.forEach(entry => {
                    const row = document.createElement('tr');
                    const movementClass = entry.movement_type === 'in' ? 'badge-in' : 
                                        entry.movement_type === 'out' ? 'badge-out' : 'badge-adjustment';
                    const impactIcon = entry.movement_type === 'in' ? 
                        '<i class="fas fa-arrow-up text-success me-1"></i>' : 
                        '<i class="fas fa-arrow-down text-danger me-1"></i>';
                    
                    // Ensure we have valid dates
                    const movementDate = entry.movement_date ? 
                        new Date(entry.movement_date).toLocaleDateString() : 'N/A';
                    
                    row.innerHTML = `
                        <td>${movementDate}</td>
                        <td><span class="badge ${movementClass}">${(entry.movement_type || '').toUpperCase()}</span></td>
                        <td>${impactIcon} ${entry.quantity || 0}</td>
                        <td>${getCurrencySymbol()}${parseFloat(entry.unit_cost || 0).toFixed(2)}</td>
                        <td>${getCurrencySymbol()}${parseFloat(entry.total_cost || 0).toFixed(2)}</td>
                        <td>${entry.batch_number || 'N/A'}</td>
                        <td>${entry.supplier_name || 'N/A'}</td>
                        <td>${entry.reference_type || 'N/A'}</td>
                        <td>${entry.notes || 'N/A'}</td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary" onclick="editBatch('${entry.id}')">
                                <i class="fas fa-edit"></i>
                            </button>
                        </td>
                    `;
                    ledgerTableBody.appendChild(row);
                });
                ledgerCountText.textContent = `Showing ${data.ledger.length} of ${pagination.total || 0} movements`;
            } else {
                ledgerTableBody.innerHTML = `
                    <tr>
                        <td colspan="10" class="text-center py-4">
                            <div class="empty-state">
                                <div class="empty-state-icon">
                                    <i class="fas fa-history"></i>
                                </div>
                                <h5>No stock movements found</h5>
                                <p class="text-muted">No stock movements recorded for this material yet.</p>
                            </div>
                        </td>
                    </tr>
                `;
                ledgerCountText.textContent = 'No movements found';
            }
            
            // Update pagination if available
            if (pagination && pagination.totalPages > 1) {
                updatePagination('ledgerPagination', pagination, changeLedgerPage);
            } else {
                const ledgerPagination = document.getElementById('ledgerPagination');
                if (ledgerPagination) ledgerPagination.innerHTML = '';
            }
            
        } catch (error) {
            console.error('Error rendering stock ledger:', error);
            ledgerTableBody.innerHTML = `
                <tr>
                    <td colspan="10" class="text-center py-4 text-danger">
                        Error loading ledger data. Please try again.
                    </td>
                </tr>
            `;
        }
    }

