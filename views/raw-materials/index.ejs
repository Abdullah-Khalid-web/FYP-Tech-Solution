            const data = await apiCall(`/batches/${id}`);
            const batch = data.data;

            document.getElementById('editBatchId').value = batch.id;
            document.getElementById('editBatchMaterialSelect').value = batch.raw_material_id;
            document.getElementById('editBatchNumber').value = batch.batch_number || '';
            document.getElementById('editMovementType').value = batch.movement_type;
            document.getElementById('editBatchQuantity').value = batch.quantity;
            document.getElementById('editBatchUnitCost').value = batch.unit_cost || '';
            document.getElementById('editReferenceType').value = batch.reference_type;
            document.getElementById('editReferenceId').value = batch.reference_id || '';
            document.getElementById('editMovementDate').value = batch.movement_date;
            document.getElementById('editExpiryDate').value = batch.expiry_date || '';
            document.getElementById('editBatchNotes').value = batch.notes || '';
            document.getElementById('editSupplierSelect').value = batch.supplier_id || '';

            calculateEditTotalCost();
            toggleEditSupplierField();

            const modal = new bootstrap.Modal(document.getElementById('editBatchModal'));
            modal.show();

        } catch (error) {
            console.error('Error loading batch:', error);
            showAlert('Error loading stock movement', 'danger');
        }
    }

    // Update batch
    async function updateBatch(e) {
        e.preventDefault();
        const form = e.target;
        const submitButton = form.querySelector('button[type="submit"]');
        const batchId = document.getElementById('editBatchId').value;

        try {
            setLoading(submitButton, true);

            const formData = new FormData(form);
            const data = Object.fromEntries(formData);
            data.id = batchId;

            await apiCall(`/batches/${batchId}`, {
                method: 'PUT',
                body: JSON.stringify(data)
            });

            showAlert('Stock movement updated successfully!', 'success');
            bootstrap.Modal.getInstance(document.getElementById('editBatchModal')).hide();
            loadBatches();
            loadMaterials();
            loadRealTimeAlerts();

        } catch (error) {
            console.error('Error updating batch:', error);
            showAlert('Error updating stock movement', 'danger');
        } finally {
            setLoading(submitButton, false);
        }
    }

    // Delete batch
    async function deleteBatch(id) {
        if (confirm('Are you sure you want to delete this stock movement? This action will reverse the stock change.')) {
            try {
                await apiCall(`/batches/${id}`, {
                    method: 'DELETE'
                });

                showAlert('Stock movement deleted successfully!', 'success');
                loadBatches();
                loadMaterials();
                loadRealTimeAlerts();

            } catch (error) {
                console.error('Error deleting batch:', error);
                showAlert('Error deleting stock movement', 'danger');
            }
        }
    }

    // Load real-time alerts
    async function loadRealTimeAlerts() {
        try {
            const data = await apiCall('/alerts/real-time');
            renderRealTimeAlerts(data.data);
        } catch (error) {
            console.error('Error loading real-time alerts:', error);
        }
    }

    // Render real-time alerts
    function renderRealTimeAlerts(alerts) {
        const tableBody = document.getElementById('realTimeAlertsTableBody');
        const noAlertsMessage = document.getElementById('noAlertsMessage');
        const alertsBadge = document.getElementById('alertsBadge');

        if (!tableBody || !noAlertsMessage || !alertsBadge) return;

        tableBody.innerHTML = '';

        if (alerts && alerts.length > 0) {
            noAlertsMessage.style.display = 'none';

            alerts.forEach(alert => {
                const row = document.createElement('tr');
                const priorityClass = alert.priority === 'high' ? 'bg-danger text-white' : 
                                    alert.priority === 'medium' ? 'bg-warning' : 'bg-info';
                
                row.innerHTML = `
                    <td>
                        <span class="badge ${priorityClass}">
                            ${alert.alert_type === 'critical_stock' ? 'Out of Stock' : 'Low Stock'}
                        </span>
                    </td>
                    <td><strong>${alert.material_name}</strong></td>
                    <td>${alert.alert_message}</td>
                    <td>${alert.current_value}</td>
                    <td>${alert.threshold_value || 'N/A'}</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary" onclick="quickAddStock('${alert.material_id}', '${alert.material_name}')">
                            <i class="fas fa-plus me-1"></i>Restock
                        </button>
                    </td>
                `;
                tableBody.appendChild(row);
            });

            alertsBadge.textContent = alerts.length;
            alertsBadge.classList.remove('d-none');
        } else {
            tableBody.innerHTML = '';
            noAlertsMessage.style.display = 'block';
            alertsBadge.textContent = '0';
            alertsBadge.classList.add('d-none');
        }
    }

    // STOCK ACTION BUTTON FUNCTIONS
